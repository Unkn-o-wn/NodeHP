<h1>edit {{course.title}}</h1>
{{#if error}}
<p class="alert"> {{error}}</p>
{{/if}}
<form action="/courses/edit" method="POST" class="course-form" novalidate>
        <div class="input-field col s6">
          <input  id="title" name="title" type="text" class="validate"  value="{{course.title}}">
          <label for="title">Name course</label>
          <span class="helper-text" data-error="Enter name" ></span>
        </div>
        <div class="input-field col s6">
          <input  id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
          <label for="price">Price course</label>
          <span class="helper-text" data-error="Enter price"></span>
        </div>
        <div class="input-field col s6">
          <input  id="img" name="img" type="text" class="validate" required value="{{course.img}}">
          <label for="img">URL img</label>
          <span class="helper-text" data-error="Enter url img" ></span>
        </div>
        <input type="hidden" name="id" value="{{course.id}}">
                <input type="hidden" name="_csrf" value="{{csrf}}">

         <button type="submit" class="btn btn-primary">Edit course</button>
                  <input type="hidden" name="_scrf" value="{{csrf}}">

</form>
<form action="/courses/remove" method="POST">
<input type="hidden" name="id" value="{{course.id}}">
        <input type="hidden" name="_csrf" value="{{csrf}}">

<button type="submit" class="btn red">Delete course</button>

</form>